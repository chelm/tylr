#!/usr/bin/env node

var nfs = require('node-fs'),
  async = require('async'),
  tylr = require('../');
 
var argv = require('optimist')
    .usage('Usage: $0 -f [input geojson] -d [out-dir] -t [tile type (geojson | pbf)] -l [levels] -n [name] -a [center|box]')
    .demand(['f','d'])
    .default('l', '0,5')
    .default('n', 'tile-layer-name')
    .default('a', 'center')
    .default('t', 'geojson')
    .argv;

tylr.tyle( argv );
